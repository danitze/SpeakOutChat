<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_dialog_fragment_topic_choose"
    android:orientation="vertical"
    android:padding="@dimen/normal_50">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/topic_choose_dialog_title"
        android:layout_marginBottom="@dimen/normal_50"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_dialog_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>